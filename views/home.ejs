<% layout('layouts/layout') -%>

  <!-- Section 1: Company Profile --> 
  <section class=" ">
    <div class="container">
      <div class="row align-items-center">
       
  <!-- Company Info -->
  <div class="col-md-6">
    <h1 class="display-4">Graphic Design Services website </h1>
    <p class="lead">We aim to provide businesses and other people who need aesthetically pleasing designs, with graphic design through our services. Styles of work: Graphic layout offerings inclusive of commercial enterprise and character design requirements. We provide multiple types of design services.</p>
    <a href="#services" class="btn btn-primary">Explore Our Services</a>
  </div>


        <!-- Company Image -->
        <div class="col-md-6">
          <img src="/designe.png" width="300" height="300" alt="Company Image" class="company-image">
        </div>
      
      </div>
    </div>
  </section>


  <div class="container py-5">
    <h1 class="mb-4 text-center">Company Profiles</h1>
    <div class="row">
        <% companies.forEach(company => { %>
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <img class="card-img-top" src="<%= company.image %>" alt="<%= company.name %>" style="height: 225px; object-fit: cover;">
                  <div class="card-body">
                        <h5 class="card-title"><%= company.name %></h5>
                        <p class="card-text">
                            <strong>Email:</strong> <%= company.email %><br>
                            <strong>Phone:</strong> <%= company.mobile || 'N/A' %>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/company/<%= company._id %>" class="btn btn-sm btn-outline-secondary">View Details</a>
                                <a href="/company/edit/<%= company._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                            <small class="text-muted">Admin: <%= company.admin.username %></small>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>



