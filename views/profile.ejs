<% layout('layouts/layout') -%>

 <!-- Section 1: Company Profile -->
 <section class="bg-light py-5">
  <div class="container">
      <div class="row align-items-center">
          <!-- Company Image -->
          <div class="col-md-6">
              <img src="<%= company.image %>" alt="<%= company.name %>" class="company-image">
          </div>
          <!-- Company Info -->
          <div class="col-md-6">
              <h1 class="display-4"><%= company.name %></h1>
              <p class="lead">
                  Welcome to <%= company.name %>, where we deliver exceptional services tailored to your needs. 
                  Our mission is to provide top-quality products and services with professionalism and excellence.
              </p>
              <p>
                  We are committed to serving our valued customers with a focus on innovation, integrity, and outstanding customer service.
              </p>
              <a href="/services?companyId=<%= company._id %>" class="btn btn-primary">Explore Our Services</a>
          </div>
      </div>
  </div>
</section>

  <!-- Section 2: Company Services -->
  <section id="services" class="py-5">
    <div class="container">
      <h2 class="text-center mb-4">Our Services</h2>
      <div class="row">
        <!-- Service Card 1 -->

         <!-- Services Section -->
         <section>
          <h2 class="mb-4">Services</h2>
          <div class="row">
              <% services.forEach(service => { %>
                  <div class="col-md-4">
                      <div class="card service-card mb-4">
                        <img src="/uploads/<%= service.image %>" alt="<%= service.serviceName %>" class="card-img-top">
                        <div class="card-body">
                              <h5 class="card-title"><%= service.serviceName %></h5>
                              <p class="card-text">Price: $<%= service.price %></p>
                          </div>
                      </div>
                  </div>
              <% }) %>
          </div>
      </section>
      
      </div>
    </div>
  </section>